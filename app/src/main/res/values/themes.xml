<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotScattergories" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#118675</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/offwhite</item>
        <item name="customTextViewBackAttributeColor">@color/marinegreen</item>
        <item name="android:textColor">@color/marinegreen</item>
        <item name="customProgressColour">@color/darkblue</item>

    </style>

    <style name="Theme.NotScattergories.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NotScattergories.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NotScattergories.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/marinegreen</item>
        <item name="android:textSize">10sp</item>
        <item name="android:theme">@style/Theme.NotScattergories</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Accessible" parent="Theme.NotScattergories">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1A85FF</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D41159</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/offwhite</item>
        <item name="customTextViewBackAttributeColor">#D41159</item>
        <item name="android:textColor">#1A85FF</item>
        <item name="customProgressColour">#1A85FF</item>

    </style>

    <style name="Theme.Accessible.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Accessible.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Accessible.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
